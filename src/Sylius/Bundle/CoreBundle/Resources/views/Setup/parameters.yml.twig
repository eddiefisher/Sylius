parameters:
    sylius.database.driver:   {{ parameters.databaseDriver }}
    sylius.database.host:     {{ parameters.databaseHost }}
    sylius.database.port:     {{ parameters.databasePort|default('~') }}
    sylius.database.name:     {{ parameters.databaseName }}
    sylius.database.user:     {{ parameters.databaseUser }}
    sylius.database.password: {{ parameters.databasePassword }}
    
    sylius.mailer.transport:  {{ parameters.mailerTransport }}
    sylius.mailer.host:       {{ parameters.mailerHost }}
    sylius.mailer.user:       {{ parameters.mailerUser }}
    sylius.mailer.password:   {{ parameters.mailerPassword }}
    
    sylius.locale: en
    
    sylius.secret: {{ parameters.secret }}
    
    sylius.installed: true
